<% if flash.present? %>
  <div id='flash'>
   <script>
     <% if flash[:success] %>
       var $toastContent = $('<span><%= flash[:success] %></span>');
       toastr.success($toastContent)
     <% end %>
     <% if flash[:info] %>
       var $toastContent = $('<span><%= flash[:info] %></span>');
       toastr.info($toastContent)
     <% end %>
     <% if flash[:danger] %>
       var $toastContent = $('<span><%= flash[:danger] %></span>');
       toastr.error($toastContent)
     <% end %>
     <% if flash[:notice] %>
       var $toastContent = $('<span><%= flash[:notice] %></span>');
       toastr.success($toastContent)
     <% end %>
     <% if flash[:alert] %>
       var $toastContent = $('<span><%= flash[:alert] %></span>');
       toastr.error($toastContent)
     <% end %>
     <% if flash[:error] %>
       var $toastContent = $('<span><%= flash[:error] %></span>');
       toastr.error($toastContent)
     <% end %>
     <% if flash[:danger_messages] %>
      <% flash[:danger_messages].each do |message| %>
        var $toastContent = $('<span><%= message %></span>');
        toastr.error($toastContent)
      <% end %>
     <% end %>
   </script>
  </div>
<% end %>

