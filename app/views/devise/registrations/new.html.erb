<style type="text/css">
  body {
    background-image: url(<%= asset_path("blur-background04.jpg")%>);
    background-repeat: no-repeat;
  }
  .account-signup {
    margin-left:10px;
  }
  .log-in {
    margin-left: 340px;
  }
</style>
<div class="login-form">
  <br/>
  <br/>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-4">
        <%= f.email_field :email, class: "form-control", placeholder: "Enter your email", required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-4">
        <br/>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter your password", required: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-4">
        <br/>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter your confirmation password", required: true%>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-4 col-md-10">
        <br/>
        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg btn-xlarge account-signup' %>
      </div>
    </div>
  <% end %>
  <div class="col-md-4 col-md-offset-4 log-in">
    <br/>
    <<< <%= link_to "Already have an account? Log in!", new_admin_session_path %> >>>
  </div>
</div>
