<% content_for :co_header do %>
  <div class="row co-header">
    <div class="col-md-3">
      <div><%= link_to "Dashboard", root_path %> > <%= @co_header%></div>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-3">
      <div><%= link_to "New Vendor", new_vendor_path, class: "btn btn-success btn-xs", style: "margin-left:-30px;margin-top:-8px;"%></div>
    </div>
  </div>
<% end %>
<table id="custom-table">
  <thead>
    <tr>
      <th>SI No.</th>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>GSTIN</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <tbody>
      <% if @vendors.present? %>
        <% count = 0 %>
        <% @vendors.each do |vendor|%>
          <% count += 1 %>
          <tr>
            <td><%= count %></td>
            <td><%= vendor.name %></td>
            <td><%= vendor.email %></td>
            <td><%= vendor.mobile %></td>
            <td><%= vendor.gstin %></td>
            <td><center><%= link_to image_tag("edit.png"), edit_vendor_path(vendor) %></center></td>
            <td><center><%= link_to image_tag("trash.png"), vendor_path(vendor), method: :delete, data: { confirm: 'Do you want to delete this Vendor?' } %></center></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
</table>
<script type="text/javascript">
  $("#custom-table").dataTable();
</script>
